{
  "name": "vovk-hello-world",
  "version": "0.0.0",
  "description": "A showcase for Next.js + Vovk.ts + Zod, demonstrating its capabilities with TypeScript, Rust, and Python RPC.",
  "scripts": {
    "dev": "vovk dev --next-dev -- --turbopack",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "bundle": "vovk bundle",

    "postversion": "npm run bundle && npm publish ./dist && git push && git push --tags",

    "demo": "npm run demo:node && npm run demo:rs && npm run demo:py",
    "demo:ts": "node --experimental-strip-types demo_node/index.mts",
    "demo:rs": "cargo run --manifest-path ./demo_rust/Cargo.toml",
    "demo:py": "python3 demo_python.py",
  
    "patch": "npm version patch"
  },
  "license": "MIT",
  "dependencies": {
    "@scalar/api-reference-react": "^0.7.2",
    "@tanstack/react-query": "^5.77.0",
    "next": "15.1.8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vovk": "^3.0.0-draft.316",
    "vovk-ajv": "^0.0.0-draft.76",
    "vovk-client": "^0.0.4-draft.91",
    "vovk-react-query": "^0.0.1-draft.78",
    "vovk-zod": "^1.0.0-draft.114",
    "vovk-python": "^0.0.1-draft.41",
    "vovk-rust": "^0.0.1-draft.32",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.8",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vovk-cli": "^0.0.1-draft.284"
  }
}
