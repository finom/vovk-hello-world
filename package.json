{
  "name": "vovk-hello-world",
  "version": "0.0.55",
  "description": "A showcase for Next.js + Vovk.ts + Zod, demonstrating its capabilities with TypeScript, Rust, and Python RPC.",
  "scripts": {
    "dev": "vovk dev --next-dev -- --turbopack",
    "prebuild": "vovk generate",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "#comment1": "Demo scripts for running examples in different languages",
    "demo:node:local": "node --experimental-strip-types demo/node/local.mts",
    "demo:node:packaged": "node --experimental-strip-types demo/node/packaged.mts",
    "demo:rust:local": "cargo run --manifest-path ./demo/rust/local/Cargo.toml --quiet",
    "demo:rust:packaged": "cargo run --manifest-path ./demo/rust/packaged/Cargo.toml --quiet",
    "demo:python:local": "python3 demo/python/local.py",
    "demo:python:packaged": "python3 demo/python/packaged.py",
    "demo:local": "npm run demo:node:local && npm run demo:rust:local && npm run demo:python:local",
    "demo:packaged": "npm run demo:node:packaged && npm run demo:rust:packaged && npm run demo:python:packaged",
    "#comment2": "Installation scripts for installing the latest version of the vovk-hello-world package in different languages",
    "install:node": "npm install vovk-hello-world@latest",
    "install:rust": "cargo update --manifest-path ./demo/rust/packaged/Cargo.toml",
    "install:python": "python3 -m pip install --upgrade vovk_hello_world --quiet",
    "install:all": "npm run install:node && npm run install:rust && npm run install:python",
    "#comment3": "Postversion scripts for publishing",
    "postversion:node": "vovk bundle && npm publish ./dist",
    "postversion:rust": "cargo publish --manifest-path dist_rust/Cargo.toml --allow-dirty",
    "postversion:python": "python3 -m build ./dist_python --wheel --sdist && python3 -m twine upload ./dist_python/dist/*",
    "postversion": "vovk generate && npm run postversion:node && npm run postversion:rust && npm run postversion:python && git commit -am \"auto: Regenerate clients after version bump\" && git push && git push --tags",
    "patch": "npm version patch"
  },
  "license": "MIT",
  "dependencies": {
    "@scalar/api-reference-react": "^0.8.1",
    "@standard-schema/spec": "^1.0.0",
    "@tanstack/react-query": "^5.90.6",
    "ajv": "^8.17.1",
    "next": "16.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vovk": "^3.0.0-draft.469",
    "vovk-ajv": "^0.0.0-draft.108",
    "vovk-client": "^0.0.4-draft.135",
    "vovk-hello-world": "^0.0.55",
    "vovk-zod": "^1.0.0-draft.148",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "postcss": "^8",
    "tailwindcss": "^4.1.16",
    "tsdown": "^0.15.12",
    "typescript": "^5",
    "vovk-cli": "^0.0.1-draft.392",
    "vovk-python": "^0.0.1-draft.77",
    "vovk-rust": "^0.0.1-draft.63"
  },
  "#TODO": "Remove overrides when tsdown is renewed to support rolldown-plugin-dts v0.17.3+",
  "overrides": {
    "rolldown-plugin-dts": "0.17.3"
  }
}
