{
  "name": "vovk-hello-world",
  "version": "0.0.3",
  "description": "A showcase for Next.js + Vovk.ts + Zod, demonstrating its capabilities with TypeScript, Rust, and Python RPC.",
  "scripts": {
    "dev": "vovk dev --next-dev -- --turbopack",
    "build": "vovk generate && next build",
    "start": "next start",
    "lint": "next lint",
    "bundle": "vovk bundle",
    "postversion:ts": "npm run bundle && npm publish ./dist",
    "postversion:rs": "cargo publish --manifest-path dist_rust/Cargo.toml",
    "postversion": "npm run postversion:ts && npm run postversion:rs && git push && git push --tags",
    "demo": "npm run demo:node && npm run demo:rs && npm run demo:py",
    "demo:ts": "node --experimental-strip-types demo_node/index.mts",
    "demo:rs": "cargo run --manifest-path ./demo_rust/Cargo.toml",
    "demo:py": "python3 demo_python.py",
    "patch": "npm version patch"
  },
  "license": "MIT",
  "dependencies": {
    "@scalar/api-reference-react": "^0.7.30",
    "@tanstack/react-query": "^5.82.0",
    "next": "15.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "vovk": "^3.0.0-draft.318",
    "vovk-ajv": "^0.0.0-draft.78",
    "vovk-client": "^0.0.4-draft.91",
    "vovk-hello-world": "^0.0.2",
    "vovk-python": "^0.0.1-draft.43",
    "vovk-react-query": "^0.0.1-draft.78",
    "vovk-rust": "^0.0.1-draft.34",
    "vovk-zod": "^1.0.0-draft.117",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "postcss": "^8",
    "tailwindcss": "^4.1.11",
    "typescript": "^5",
    "vovk-cli": "^0.0.1-draft.286"
  }
}
